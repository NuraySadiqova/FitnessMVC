@using FitnessMVC.Models
@using NuGet.DependencyResolver
@model List<Trainer>;
@{
    int counter = 1;
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Trainers</h6>
            @if(Model.Count > 0)
            {
                <a class="btn btn-primary">Trainer elave et</a>
            }

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sira</th>
                            <th>Id</th>
                            <th>Ad</th>
                            <th>Ixtisas</th>
                            <th>Sekil</th>
                            <th>Aciklama</th>
                            <th>Start date</th>
                            <th>Salary</th>
                        </tr>
                    </thead>
                    @if (Model.Count > 0)
                    {
                        
                    <tbody>
                        <tr>
                            @foreach (var trainer in Model)
                            {
                            <td>@counter</td>
                            <td>@trainer.Id</td>
                            <td>@trainer.Name</td>
                            <td>@trainer.Category.Name</td>
                            <td>img src="Upload/Trainer/@trainer.ImageUrl"</td>
                            <td>@trainer.Description</td>
                       
                            counter++;
                            }
                      </tr>
                        </tbody>
                    }
                    else
                    {
                       <h class="text-danger"1>Hec bir treiner yoxdur</h>
                       <p>Isteseniz asagidaki buttonla elave ede bilersiniz</p>
                        <a class="btn btn-primary" >Trainer elave et</a>
                       
                    }
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->